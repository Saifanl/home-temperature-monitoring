{
  "name": "home-temperature-monitoring-web",
  "version": "0.0.0",
  "description": "Web Api and UI",
  "author": "Dmitry Fisenko",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start:dev": "concurrently --kill-others \"npm run server:watch\" \"ng serve --proxy-config proxy.conf.json\"",
    "start:prod": "node dist/main.js",
    "start:debug": "concurrently --kill-others \"npm run server:watch --config nodemon-debug.json\" \"ng serve --proxy-config proxy.conf.json\"",
    "client:build": "ng build",
    "client:test": "ng test",
    "client:lint": "ng lint",
    "client:e2e": "ng e2e",
    "server:prestart:prod": "rimraf dist && tsc",
    "server:start": "ts-node -r tsconfig-paths/register -P tsconfig.server.json src/server/main.ts",
    "server:watch": "nodemon",
    "server:test": "jest",
    "server:test:watch": "jest --watch",
    "server:test:cov": "jest --coverage",
    "server:test:e2e": "jest --config ./test/jest-e2e.json",
    "server:lint": "tslint --project ./tsconfig.server.json './src/server/**/*.ts' -c tslint.server.json --fix",
    "server:format": "prettier --write \"src/**/*.ts\"",
    "webpack": "webpack --config webpack.config.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "core-js": "^2.5.4",
    "reflect-metadata": "^0.1.12",
    "rxjs": "~6.2.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular/cli": "~6.2.1",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/supertest": "^2.0.5",
    "codelyzer": "~4.3.0",
    "concurrently": "^4.0.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.18.4",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~2.9.2",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "tsconfig-paths": "^3.5.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
